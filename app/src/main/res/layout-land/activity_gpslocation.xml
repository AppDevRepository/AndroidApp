<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center_vertical|center_horizontal"
    android:orientation="vertical"
    tools:context="pass.threestech.com.personalactivityscoringsystem.GPSLocationActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_paper_plane" />

    <TextView
        android:id="@+id/CurrentLocation_textview"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:textSize="20dp" />

    <Button
        android:id="@+id/poll_interval_button"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Set Poll Interval"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/Stop_LocationUpdates_button"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="Stop Location Updates"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/View_LocationUpdates_button"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        android:text="View Location Updates"
        android:textColor="@android:color/white" />
</LinearLayout>
